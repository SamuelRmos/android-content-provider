<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sam_chordas.android.androidflavors">

    <permission
        android:name="com.sam_chordas.android.androidflavors.data.READ_DATABASE"
        android:description="@string/perm_description"
        android:label="@string/perm_label"
        android:protectionLevel="normal" />

    <application
        android:name=".FlavorApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".data.FlavorsProvider"
            android:authorities="@string/content_authority"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.sam_chordas.android.androidflavors.data.READ_DATABASE" />
    </application>
</manifest>
